<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_border_default" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:top="3dp"
        android:left="3dp"
        android:right="3dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_background_default" />  <!-- background color -->
        </shape>
    </item>
</layer-list>
