<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_border_centerline" /> <!-- border color -->
        </shape>
    </item>

    <item android:right="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/cell_border_default" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:top="1dp"
        android:left="1dp"
        android:right="2dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_background_default" />  <!-- background color -->
        </shape>
    </item>
</layer-list>
